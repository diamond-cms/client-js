{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "JS Library",
  "compilerOptions": {
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "module": "esnext",
    "lib": ["ES2015", "dom"],
    "target": "es6",
    "outDir": "dist"
  },
  "include": ["."],
  "exclude": [
    "dist",
    "build",
    "node_modules"
  ]
}
